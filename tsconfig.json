{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "shared/canUseDOM": [
        "/src/shared/canUseDOM.ts"
      ],
      "shared/caretFromPoint": [
        "/src/shared/caretFromPoint.ts"
      ],
      "shared/simpleDiffWithCursor": [
        "/src/shared/simpleDiffWithCursor.ts"
      ],
      "shared/invariant": [
        "/src/shared//invariant.ts"
      ],
      "shared/warnOnlyOnce": [
        "/src/shared//warnOnlyOnce.ts"
      ],
      "shared/environment": [
        "/src/shared//environment.ts"
      ],
      "shared/useLayoutEffect": [
        "/src/shared//useLayoutEffect.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}